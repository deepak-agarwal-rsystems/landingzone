{
    "$schema": "https://schema.management.azure.com/schemas/2019-10-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "applicationName": {
            "type": "String",
            "defaultValue": "cloud",
            "metadata": {
                "description": "The name of the application. Keep it in 5 letters as it will be used as a prefix for all resources."
            },
            "minLength": 1,
            "maxLength": 5
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Azure Data Share service is available in these locations. Other resources will be created in the same region. It is recommended to use the same location for the resource group."
            }
        },
        "tags": {
            "defaultValue": {
                "Cost Center": "1108-300-8602",
                "Enviornment": "Production",
                "Contributor Name": "Developer Name"
            },
            "type": "object",
            "metadata": {
                "description": "Tags to be added to the resource group."
            }
        }
    },
    "variables": {
        "rgHubName": "[concat('rg-z-',parameters('applicationName'),'-hub-p-001')]",
        "rgSpokeName": "[concat('rg-z-',parameters('applicationName'),'-spoke-p-001')]",
        "hubVirtualNetworkName": "[concat('vnet-z-',parameters('applicationName'),'-hub-p-001')]",
        "spokeVirtualNetworkName": "[concat('vnet-z-',parameters('applicationName'),'-spoke-p-001')]",
        "appGatewaySubnetName": "appgw-subnet",
        "hubResourceSubnetName": "hubrsc-subnet",
        "subnetsData": [
            {
                "name": "sn-z-cpru-infra",
                "addressPrefixes": "10.195.64.0/24",
                "delegations": [],
                "privateEndpointNetworkPolicies": "Disabled",
                "privateLinkServiceNetworkPolicies": "Enabled",
                "defaultOutboundAccess": true
            }
        ]
    },
    "resources": [
        {
            "name": "[variables('rgHubName')]",
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2019-05-01",
            "location": "[parameters('location')]",
            "dependsOn": [],
            "tags": "[parameters('tags')]"
        },
        {
            "name": "[variables('rgSpokeName')]",
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2019-05-01",
            "location": "[parameters('location')]",
            "dependsOn": [],
            "tags": "[parameters('tags')]"
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2021-05-01",
            "name": "[variables('hubVirtualNetworkName')]",
            "location": "[parameters('location')]",
            "tags": "[parameters('tags')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', variables('rgHubName'))]"
            ],
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [ "10.1.0.0/21" ]
                },
                "subnets": [
                    {
                        "name": "GatewaySubnet",
                        "properties": {
                            "addressPrefix": "10.1.1.0/24",
                            "delegations": [],
                            "privateEndpointNetworkPolicies": "Disabled",
                            "privateLinkServiceNetworkPolicies": "Enabled"
                        }
                    },
                    {
                        "name": "AzureBastionSubnet",
                        "properties": {
                            "addressPrefix": "10.1.2.0/26",
                            "delegations": [],
                            "privateEndpointNetworkPolicies": "Disabled",
                            "privateLinkServiceNetworkPolicies": "Enabled"
                        }
                    },
                    {
                        "name": "[variables('appGatewaySubnetName')]",
                        "properties": {
                            "addressPrefix": "10.1.2.64/26",
                            "delegations": [],
                            "privateEndpointNetworkPolicies": "Disabled",
                            "privateLinkServiceNetworkPolicies": "Enabled"
                        }
                    },
                    {
                        "name": "[variables('hubResourceSubnetName')]",
                        "properties": {
                            "addressPrefix": "10.1.3.0/24",
                            "delegations": [],
                            "privateEndpointNetworkPolicies": "Disabled",
                            "privateLinkServiceNetworkPolicies": "Enabled"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2021-05-01",
            "name": "[variables('spokeVirtualNetworkName')]",
            "location": "[parameters('location')]",
            "tags": "[parameters('tags')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', variables('rgSpokeName'))]"
            ],
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [ "10.1.16.0/21" ]
                },
                "encryption": {
                    "enabled": false,
                    "enforcement": "AllowUnencrypted"
                },
                "copy": [
                    {
                        "name": "subnets",
                        "count": "[length(variables('subnetsData'))]",
                        "input": {
                            "name": "[variables('subnetsData')[copyIndex('subnets')].name]",
                            "properties": {
                                "addressPrefix": "[variables('subnetsData')[copyIndex('subnets')].addressPrefixes]",
                                "delegations": "[variables('subnetsData')[copyIndex('subnets')].delegations]",
                                "privateEndpointNetworkPolicies": "[variables('subnetsData')[copyIndex('subnets')].privateEndpointNetworkPolicies]",
                                "privateLinkServiceNetworkPolicies": "[variables('subnetsData')[copyIndex('subnets')].privateLinkServiceNetworkPolicies]"
                            }
                        }
                    }
                ],
                "enableDdosProtection": false
            }
        }
    ]
}