{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "applicationName": {
            "type": "String",
            "defaultValue": "cloud",
            "metadata": {
                "description": "The name of the application. Keep it in 5 letters as it will be used as a prefix for all resources."
            },
            "minLength": 1,
            "maxLength": 5
        },
        "location": {
            "type": "string",
            "defaultValue": "[deployment().location]",
            "metadata": {
                "description": "Azure Data Share service is available in these locations. Other resources will be created in the same region. It is recommended to use the same location for the resource group."
            }
        },
        "tags": {
            "defaultValue": {
                "Cost Center": "1108-300-8602",
                "Enviornment": "Production",
                "Contributor Name": "Developer Name"
            },
            "type": "object",
            "metadata": {
                "description": "Tags to be added to the resource group."
            }
        },
        "IsVPNGatewayNeeded": {
            "type": "bool",
            "defaultValue": true,
            "metadata": {
                "description": "If true, the VPN gateway will be created."
            }
        },
        "IsApplicationGatewayNeeded": {
            "type": "bool",
            "defaultValue": true,
            "metadata": {
                "description": "If true, the application gateway will be created."
            }
        },
        "IsBastionNeeded": {
            "type": "bool",
            "defaultValue": true,
            "metadata": {
                "description": "If true, the bastion will be created."
            }
        }
    },
    "variables": {
        "rgHubName": "[concat('rg-z-',parameters('applicationName'),'-hub-p-001')]",
        "rgSpokeName": "[concat('rg-z-',parameters('applicationName'),'-spoke-p-001')]",
        "hubVirtualNetworkName": "[concat('vnet-z-',parameters('applicationName'),'-hub-p-001')]",
        "spokeVirtualNetworkName": "[concat('vnet-z-',parameters('applicationName'),'-spoke-p-001')]",
        "appGatewaySubnetName": "appgw-subnet",
        "hubResourceSubnetName": "hubrsc-subnet",
        "subnetsData": [
            {
                "name": "sn-z-cpru-infra",
                "addressPrefixes": "10.195.64.0/24",
                "delegations": [],
                "privateEndpointNetworkPolicies": "Disabled",
                "privateLinkServiceNetworkPolicies": "Enabled",
                "defaultOutboundAccess": true
            }
        ],
        "agPublicIPName": "[concat('pip-z-',parameters('applicationName'),'-ag-p-001')]",
        "applicationGatewayName": "[concat('ag-z-',parameters('applicationName'),'-p-001')]",
        "vpnGWPublicIPName": "[concat('pip-z-',parameters('applicationName'),'-vpngw-p-001')]",
        "vpnGWName": "[concat('vpngw-z-',parameters('applicationName'),'-p-001')]",
        "bastionPublicIPName": "[concat('pip-z-',parameters('applicationName'),'-bastion-p-001')]",
        "bastionName": "[concat('bastion-z-',parameters('applicationName'),'-p-001')]",
        "keyvaultName": "[concat('kv-z-',parameters('applicationName'),'-p-001')]",
        "storageAccountName": "[concat('saz',parameters('applicationName'),'p001')]"
    },
    "resources": [
        {
            "name": "[variables('rgHubName')]",
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2019-05-01",
            "location": "[parameters('location')]",
            "dependsOn": [],
            "tags": "[parameters('tags')]"
        },
        {
            "name": "[variables('rgSpokeName')]",
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2019-05-01",
            "location": "[parameters('location')]",
            "dependsOn": [],
            "tags": "[parameters('tags')]"
        },
