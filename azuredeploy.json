{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "applicationName": {
            "type": "String",
            "defaultValue": "cloud",
            "metadata": {
                "description": "The name of the application. Keep it in 5 letters as it will be used as a prefix for all resources."
            },
            "minLength": 1,
            "maxLength": 5
        },
        "location": {
            "type": "string",
            "defaultValue": "[deployment().location]",
            "metadata": {
                "description": "Azure Data Share service is available in these locations. Other resources will be created in the same region. It is recommended to use the same location for the resource group."
            }
        },
        "tags": {
            "defaultValue": {
                "Cost Center": "1108-300-8602",
                "Enviornment": "Production",
                "Contributor Name": "Developer Name"
            },
            "type": "object",
            "metadata": {
                "description": "Tags to be added to the resource group."
            }
        },
        "IsVPNGatewayNeeded": {
            "type": "bool",
            "defaultValue": true,
            "metadata": {
                "description": "If true, the VPN gateway will be created."
            }
        },
        "IsApplicationGatewayNeeded": {
            "type": "bool",
            "defaultValue": true,
            "metadata": {
                "description": "If true, the application gateway will be created."
            }
        },
        "IsBastionNeeded": {
            "type": "bool",
            "defaultValue": true,
            "metadata": {
                "description": "If true, the bastion will be created."
            }
        }
    },
    "variables": {
        "rgHubName": "[concat('rg-z-',parameters('applicationName'),'-hub-p-001')]",
        "rgSpokeName": "[concat('rg-z-',parameters('applicationName'),'-spoke-p-001')]",
        "hubVirtualNetworkName": "[concat('vnet-z-',parameters('applicationName'),'-hub-p-001')]",
        "spokeVirtualNetworkName": "[concat('vnet-z-',parameters('applicationName'),'-spoke-p-001')]",
        "appGatewaySubnetName": "appgw-subnet",
        "hubResourceSubnetName": "hubrsc-subnet",
        "subnetsData": [
            {
                "name": "sn-z-cpru-infra",
                "addressPrefixes": "10.195.64.0/24",
                "delegations": [],
                "privateEndpointNetworkPolicies": "Disabled",
                "privateLinkServiceNetworkPolicies": "Enabled",
                "defaultOutboundAccess": true
            }
        ],
        "agPublicIPName": "[concat('pip-z-',parameters('applicationName'),'-ag-p-001')]",
        "applicationGatewayName": "[concat('ag-z-',parameters('applicationName'),'-p-001')]",
        "vpnGWPublicIPName": "[concat('pip-z-',parameters('applicationName'),'-vpngw-p-001')]",
        "vpnGWName": "[concat('vpngw-z-',parameters('applicationName'),'-p-001')]",
        "bastionPublicIPName": "[concat('pip-z-',parameters('applicationName'),'-bastion-p-001')]",
        "bastionName": "[concat('bastion-z-',parameters('applicationName'),'-p-001')]"
    },
    "resources": [
        {
            "name": "[variables('rgHubName')]",
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2019-05-01",
            "location": "[parameters('location')]",
            "dependsOn": [],
            "tags": "[parameters('tags')]"
        },
        {
            "name": "[variables('rgSpokeName')]",
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2019-05-01",
            "location": "[parameters('location')]",
            "dependsOn": [],
            "tags": "[parameters('tags')]"
        },
        {
            "name": "nestedDeployment",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "resourceGroup": "[variables('rgHubName')]",
            "dependsOn": [
                "[concat('Microsoft.Resources/resourceGroups/', variables('rgHubName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": [
                        {
                            "type": "Microsoft.Network/virtualNetworks",
                            "apiVersion": "2021-05-01",
                            "name": "[variables('hubVirtualNetworkName')]",
                            "location": "[parameters('location')]",
                            "tags": "[parameters('tags')]",
                            "properties": {
                                "addressSpace": {
                                    "addressPrefixes": [ "10.1.0.0/21" ]
                                },
                                "subnets": [
                                    {
                                        "name": "GatewaySubnet",
                                        "properties": {
                                            "addressPrefix": "10.1.1.0/24",
                                            "delegations": [],
                                            "privateEndpointNetworkPolicies": "Disabled",
                                            "privateLinkServiceNetworkPolicies": "Enabled"
                                        }
                                    },
                                    {
                                        "name": "AzureBastionSubnet",
                                        "properties": {
                                            "addressPrefix": "10.1.2.0/26",
                                            "delegations": [],
                                            "privateEndpointNetworkPolicies": "Disabled",
                                            "privateLinkServiceNetworkPolicies": "Enabled"
                                        }
                                    },
                                    {
                                        "name": "[variables('appGatewaySubnetName')]",
                                        "properties": {
                                            "addressPrefix": "10.1.2.64/26",
                                            "delegations": [],
                                            "privateEndpointNetworkPolicies": "Disabled",
                                            "privateLinkServiceNetworkPolicies": "Enabled"
                                        }
                                    },
                                    {
                                        "name": "[variables('hubResourceSubnetName')]",
                                        "properties": {
                                            "addressPrefix": "10.1.3.0/24",
                                            "delegations": [],
                                            "privateEndpointNetworkPolicies": "Disabled",
                                            "privateLinkServiceNetworkPolicies": "Enabled"
                                        }
                                    }
                                ]
                            }
                        },
                        {
                            "condition": "[parameters('IsApplicationGatewayNeeded')]",
                            "type": "Microsoft.Network/publicIPAddresses",
                            "apiVersion": "2023-04-01",
                            "name": "[variables('agPublicIPName')]",
                            "location": "[parameters('location')]",
                            "tags": "[parameters('tags')]",
                            "dependsOn": [
                                "[concat('Microsoft.Network/virtualNetworks/', variables('hubVirtualNetworkName'))]"
                            ],
                            "sku": {
                                "name": "Standard",
                                "tier": "Regional"
                            },
                            "properties": {
                                "publicIPAddressVersion": "IPv4",
                                "publicIPAllocationMethod": "Static",
                                "idleTimeoutInMinutes": 4,
                                "ipTags": [],
                                "ddosSettings": {
                                    "protectionMode": "VirtualNetworkInherited"
                                },
                                "dnsSettings": {
                                    "domainNameLabel": "[variables('agPublicIPName')]"
                                }
                            }
                        },
                        {
                            "condition": "[parameters('IsApplicationGatewayNeeded')]",
                            "type": "Microsoft.Network/applicationGateways",
                            "apiVersion": "2023-04-01",
                            "name": "[variables('applicationGatewayName')]",
                            "location": "[parameters('location')]",
                            "tags": "[parameters('tags')]",
                            "dependsOn": [
                                "[concat('Microsoft.Network/virtualNetworks/', variables('hubVirtualNetworkName'))]",
                                "[concat('Microsoft.Network/publicIPAddresses/', variables('agPublicIPName'))]"
                            ],
                            "properties": {
                                "sku": {
                                    "name": "Standard_v2",
                                    "tier": "Standard_v2",
                                    "capacity": 1
                                },
                                "gatewayIPConfigurations": [
                                    {
                                        "name": "appGatewayIpConfig",
                                        "properties": {
                                            "subnet": {
                                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('hubVirtualNetworkName'), variables('appGatewaySubnetName'))]"
                                            }
                                        }
                                    }
                                ],
                                "sslCertificates": [],
                                "trustedRootCertificates": [],
                                "trustedClientCertificates": [],
                                "sslProfiles": [],
                                "frontendIPConfigurations": [
                                    {
                                        "name": "appGwPublicFrontendIpIPv4",
                                        "properties": {
                                            "privateIPAllocationMethod": "Dynamic",
                                            "publicIPAddress": {
                                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('agPublicIPName'))]"
                                            }
                                        }
                                    }
                                ],
                                "frontendPorts": [
                                    {
                                        "name": "port_80",
                                        "properties": {
                                            "Port": 80
                                        }
                                    }
                                ],
                                "backendAddressPools": [
                                    {
                                        "name": "TestPool",
                                        "properties": {
                                            "backendAddresses": []
                                        }
                                    },
                                    {
                                        "name": "TestBackendTarget",
                                        "properties": {
                                            "backendAddresses": []
                                        }
                                    }
                                ],
                                "loadDistributionPolicies": [],
                                "backendHttpSettingsCollection": [
                                    {
                                        "name": "TestBackendSetting",
                                        "properties": {
                                            "Port": 80,
                                            "Protocol": "Http",
                                            "cookieBasedAffinity": "Disabled",
                                            "requestTimeout": 20
                                        }
                                    }
                                ],
                                "backendSettingsCollection": [],
                                "httpListeners": [
                                    {
                                        "name": "TestListner",
                                        "properties": {
                                            "frontendIPConfiguration": {
                                                "id": "[concat(resourceId('Microsoft.Network/applicationGateways', variables('applicationGatewayName')), '/frontendIPConfigurations/appGwPublicFrontendIpIPv4')]"
                                            },
                                            "frontendPort": {
                                                "id": "[concat(resourceId('Microsoft.Network/applicationGateways', variables('applicationGatewayName')), '/frontendPorts/port_80')]"
                                            },
                                            "protocol": "Http",
                                            "sslCertificate": null,
                                            "customErrorConfigurations": []
                                        }
                                    }
                                ],
                                "listeners": [],
                                "urlPathMaps": [],
                                "requestRoutingRules": [
                                    {
                                        "Name": "TestRule",
                                        "properties": {
                                            "RuleType": "Basic",
                                            "httpListener": {
                                                "id": "[concat(resourceId('Microsoft.Network/applicationGateways', variables('applicationGatewayName')), '/httpListeners/TestListner')]"
                                            },
                                            "priority": 100,
                                            "backendAddressPool": {
                                                "id": "[concat(resourceId('Microsoft.Network/applicationGateways', variables('applicationGatewayName')), '/backendAddressPools/TestBackendTarget')]"
                                            },
                                            "backendHttpSettings": {
                                                "id": "[concat(resourceId('Microsoft.Network/applicationGateways', variables('applicationGatewayName')), '/backendHttpSettingsCollection/TestBackendSetting')]"
                                            }
                                        }
                                    }
                                ],
                                "routingRules": [],
                                "probes": [
                                ],
                                "rewriteRuleSets": [],
                                "redirectConfigurations": [],
                                "privateLinkConfigurations": [],
                                "enableHttp2": true
                            }
                        },
                        {
                            "condition": "[parameters('IsVPNGatewayNeeded')]",
                            "type": "Microsoft.Network/publicIPAddresses",
                            "apiVersion": "2023-04-01",
                            "name": "[variables('vpnGWPublicIPName')]",
                            "location": "[parameters('location')]",
                            "tags": "[parameters('tags')]",
                            "dependsOn": [
                                "[concat('Microsoft.Network/virtualNetworks/', variables('hubVirtualNetworkName'))]"
                            ],
                            "sku": {
                                "name": "Standard",
                                "tier": "Regional"
                            },
                            "properties": {
                                "publicIPAddressVersion": "IPv4",
                                "publicIPAllocationMethod": "Static",
                                "idleTimeoutInMinutes": 4,
                                "ipTags": [],
                                "ddosSettings": {
                                    "protectionMode": "VirtualNetworkInherited"
                                },
                                "dnsSettings": {
                                    "domainNameLabel": "[variables('vpnGWPublicIPName')]"
                                }
                            }
                        },
                        {
                            "condition": "[parameters('IsVPNGatewayNeeded')]",
                            "type": "Microsoft.Network/virtualNetworkGateways",
                            "apiVersion": "2023-04-01",
                            "name": "[variables('vpnGWName')]",
                            "location": "[parameters('location')]",
                            "tags": "[parameters('tags')]",
                            "dependsOn": [
                                "[concat('Microsoft.Network/virtualNetworks/', variables('hubVirtualNetworkName'))]",
                                "[concat('Microsoft.Network/publicIPAddresses/', variables('vpnGWPublicIPName'))]"
                            ],
                            "properties": {
                                "enablePrivateIpAddress": false,
                                "ipConfigurations": [
                                    {
                                        "name": "default",
                                        "id": "[concat(resourceId('Microsoft.Network/virtualNetworkGateways', variables('vpnGWName')), '/ipConfigurations/default')]",
                                        "properties": {
                                            "privateIPAllocationMethod": "Dynamic",
                                            "publicIPAddress": {
                                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('vpnGWPublicIPName'))]"
                                            },
                                            "subnet": {
                                                "id": "[concat('Microsoft.Network/virtualNetworks/subnets/', variables('hubVirtualNetworkName'), '/GatewaySubnet')]"
                                            }
                                        }
                                    }
                                ],
                                "natRules": [],
                                "virtualNetworkGatewayPolicyGroups": [],
                                "enableBgpRouteTranslationForNat": false,
                                "disableIPSecReplayProtection": false,
                                "sku": {
                                    "name": "VpnGw4AZ",
                                    "tier": "VpnGw4AZ"
                                },
                                "gatewayType": "Vpn",
                                "vpnType": "RouteBased",
                                "enableBgp": false,
                                "activeActive": false,
                                "vpnGatewayGeneration": "Generation2"
                            }
                        },
                        {
                            "condition": "[parameters('IsBastionNeeded')]",
                            "type": "Microsoft.Network/publicIPAddresses",
                            "apiVersion": "2023-04-01",
                            "name": "[variables('bastionPublicIPName')]",
                            "location": "[parameters('location')]",
                            "tags": "[parameters('tags')]",
                            "dependsOn": [
                                "[concat('Microsoft.Network/virtualNetworks/', variables('hubVirtualNetworkName'))]"
                            ],
                            "sku": {
                                "name": "Standard",
                                "tier": "Regional"
                            },
                            "properties": {
                                "publicIPAddressVersion": "IPv4",
                                "publicIPAllocationMethod": "Static",
                                "idleTimeoutInMinutes": 4,
                                "ipTags": [],
                                "ddosSettings": {
                                    "protectionMode": "VirtualNetworkInherited"
                                },
                                "dnsSettings": {
                                    "domainNameLabel": "[variables('bastionPublicIPName')]"
                                }
                            }
                        },
                        {
                            "condition": "[parameters('IsBastionNeeded')]",
                            "type": "Microsoft.Network/bastionHosts",
                            "apiVersion": "2023-04-01",
                            "name": "[variables('bastionName')]",
                            "location": "[parameters('location')]",
                            "tags": "[parameters('tags')]",
                            "dependsOn": [
                                "[concat('Microsoft.Network/virtualNetworks/', variables('hubVirtualNetworkName'))]",
                                "[concat('Microsoft.Network/publicIPAddresses/', variables('bastionPublicIPName'))]"
                            ],
                            "sku": {
                                "name": "Basic"
                            },
                            "properties": {
                                "scaleUnits": 2,
                                "ipConfigurations": [
                                    {
                                        "name": "IpConf",
                                        "id": "[concat(resourceId('Microsoft.Network/bastionHosts', variables('bastionName')), '/bastionHostIpConfigurations/IpConf')]",
                                        "properties": {
                                            "privateIPAllocationMethod": "Dynamic",
                                            "publicIPAddress": {
                                                "id": "[concat('Microsoft.Network/publicIPAddresses/', variables('bastionPublicIPName'))]"
                                            },
                                            "subnet": {
                                                "id": "[concat('Microsoft.Network/virtualNetworks/subnets/', variables('hubVirtualNetworkName'), '/AzureBastionSubnet')]"
                                            }
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        }
    ]
}